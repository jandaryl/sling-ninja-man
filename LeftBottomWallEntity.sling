func createSprite override as Sprite
{
    battleScene = scene
    bgWallSprite = battleScene.getBackgroundWallEntity()

    var wallImage = scene.createTextureForImageResource("wall")

    leftBottomWallSprite = SpriteUtil.addTextureSpriteForSize(scene, layer, wallImage, 0.1 * layer.getReferenceWidth(), 0.1 * layer.getReferenceHeight()) 
   	// leftBottomWallSprite.move(bgWallSprite.getWidth() * 0.415 - (leftBottomWallSprite.getWidth() * 0.5), bgWallSprite.getHeight() * 1.0 - (leftBottomWallSprite.getHeight() * 0.5))
   	leftBottomWallSprite.move(bgWallSprite.getWidth() * 0.7 - (leftBottomWallSprite.getWidth() * 0.5), bgWallSprite.getHeight() * 0.7 - (leftBottomWallSprite.getHeight() * 0.5))

    return(leftBottomWallSprite)
}

func slashSkillEffect
{
